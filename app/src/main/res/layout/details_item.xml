<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/backdrop_image_view_details"
            android:layout_width="368dp"
            android:layout_height="180dp"
            android:contentDescription="@string/description_backdrop"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/title_in_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/backdrop" />

        <ProgressBar
            android:id="@+id/backdropProgressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/backdrop_image_view_details"
            app:layout_constraintLeft_toLeftOf="@+id/backdrop_image_view_details"
            app:layout_constraintRight_toRightOf="@+id/backdrop_image_view_details"
            app:layout_constraintTop_toTopOf="@+id/backdrop_image_view_details" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="206dp" />

        <Button
            android:id="@+id/play_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_circle_outline_48px"
            app:layout_constraintBottom_toBottomOf="@+id/backdrop_image_view_details"
            app:layout_constraintLeft_toLeftOf="@+id/backdrop_image_view_details"
            app:layout_constraintRight_toRightOf="@+id/backdrop_image_view_details"
            app:layout_constraintTop_toTopOf="@+id/backdrop_image_view_details" />

        <ImageView
            android:id="@+id/add_favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src ="@drawable/ic_favorite_border_48px"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="@+id/backdrop_image_view_details"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/backdrop_image_view_details"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintTop_toTopOf="@+id/backdrop_image_view_details"
            android:layout_marginTop="170dp"
            app:layout_constraintBottom_toBottomOf="@+id/backdrop_image_view_details"
            app:layout_constraintVertical_bias="0.187"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/title_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textLight"
            android:textSize="@dimen/title_in_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backdrop_image_view_details"
            tools:text="Beauty and the Beast (2017)" />

        <TextView
            android:id="@+id/genres_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textPrimaryDark"
            android:textSize="@dimen/genres_in_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_in_details"
            tools:text="Action | Adventure | Science Fiction" />

        <TextView
            android:id="@+id/vote_average_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_star_18px"
            android:drawablePadding="@dimen/vote_average_padding"
            android:drawableStart="@drawable/ic_star_18px"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textLight"
            android:textSize="@dimen/vote_average_in_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genres_in_details"
            tools:text="7.8" />

        <TextView
            android:id="@+id/overview_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/overview_in_details"
            android:lineSpacingMultiplier="@string/line_space_multiplier"
            android:fontFamily="sans-serif-light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vote_average_in_details"
            app:layout_constraintBottom_toTopOf="@+id/poster_image_view_details"
            android:paddingBottom="16dp"
            tools:text="A live-action adaptation of Disney's version of the classic 'Beauty and the Beast' tale of a cursed prince and a beautiful young woman who helps him break the spell."
            app:layout_constraintHorizontal_bias="0.0" />


        <ImageView
            android:id="@+id/poster_image_view_details"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_margin="@dimen/margin_in_details"
            android:layout_marginLeft="@dimen/margin_in_details"
            android:layout_marginStart="@dimen/margin_in_details"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/description_poster"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overview_in_details"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/reviewList"
            android:layout_marginBottom="16dp"
            tools:src="@drawable/poster"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="16dp" />

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/reviewList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:drawSelectorOnTop="true"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/poster_image_view_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>